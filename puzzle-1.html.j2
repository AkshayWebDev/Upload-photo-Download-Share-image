  display: flex;
  align-items: center;
  justify-content: center;
}

.timer__label {
  display: block;
  /* margin-bottom: 2rem; */
  font-size: 14px;
  padding-right: 10px;
}

.timer__value--minutes {
  font-size: 3rem;
}

.timer__value--seconds {
  font-size: 3rem;
}
.card{
