{%block content%}
  <!-- main -->
  <main class="app main game-page d-none d-md-block" role="main" >
    <div class="container h-100">
      <div class="row h-100 align-items-center">
        <div class="col-12 col-lg-12 col-md-12">

          <div class="game-card">
            <!-- <p class="h3">Start Game</p> -->
            <img src="{{static('assets/images/puzzle.jpg')}}" alt="" class="img-fluid">
            <button type="button" class="btn btn-primary mt-5" data-play-game>Start Game</button>
          </div>

          <!-- puzzle -->
          <div id="collage" style="display: none;">
              <!-- <h2>Picture Puzzle</h2> -->

              <div id="playPanel">
                  <!-- <h3 id="imgTitle"></h3> <hr /> -->
                  <div class="row">
                    <div class="col-md-7 col-12">
                      <ul id="sortable" class="sortable"></ul>
                    </div>
                    <div class="col-md-5 col-12 text-center">
                      <div id="actualImageBox">
                          <div id="stepBox" class="text-left">
                              <div>Count:</div><div class="stepCount">0</div>
                          </div>
