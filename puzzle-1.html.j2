    transform: scale(.75);
    transform-origin: top left;
  }
  .h-100{
    height: 100%;
  }
  main.game-page {
    height: 100%;
    padding-top: 10rem;
    overflow-x: hidden;
  }
  main.game-page .login-footer {
    position: relative !important;
  }
}

