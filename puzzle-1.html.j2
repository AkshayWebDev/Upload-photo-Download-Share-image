  margin-top: 10px;
  margin-bottom: 10px;
}
.close-puzzle:focus, .close-puzzle:hover{
  border-color: #ffc107;
  outline: none;
}

.gameArea__button {
  background: #092456;
  padding: 1rem 4rem;
  border: 1px solid #eee;
  color: #fff;
  border-radius: 0.5rem;
  font-size: 16px;
  margin-top: 10px;
  margin-bottom: 10px;
